{% extends 'admin/base.html.twig' %}

{% block title %}Services
{% endblock %}

{% block body %}
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<div class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1 class="m-0 text-dark">Detail service</h1>
					</div>
					<!-- /.col -->
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="{{path("adminPath.dashboard")}}">Home</a>
							</li>
							<li class="breadcrumb-item active">Services</li>
						</ol>
					</div>
					<!-- /.col -->
				</div>
				<!-- /.row -->
			</div>
			<!-- /.container-fluid -->
		</div>
		<!-- /.content-header -->
		<section class="content">
			<div class="container">

				<table class="table">
					<tbody>
						<tr>
							<th>Intitule du service</th>
							<td>{{ service.name }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ service.description }}</td>
						</tr>
						<tr>
							<th>Quantite Max</th>
							<td>{{ service.quantityMax }}</td>
						</tr>
						<tr>
							<th>Prix initial</th>
							<td>{{ service.priceInitial }}</td>
						</tr>
						<tr>
							<th>Prix special</th>
							<td>{{ service.priceSpecial }}</td>
						</tr>
						<tr>
							<th>Date de creation</th>
							<td>{{ service.createdAt ? service.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
						<tr>
							<th>Date de modification</th>
							<td>{{ service.modifyAt ? service.modifyAt|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
						{# <tr>
												                                <th>Created_by</th>
												                                <td>{{ service.createdBy }}</td>
												                            </tr>
												                            <tr>
												                                <th>Modified_by</th>
												                                <td>{{ service.modifiedBy }}</td>
												                            </tr>
												                            <tr>
												                                <th>Deleted_by</th>
												                                <td>{{ service.deletedBy }}</td>
												                            </tr>
												                            <tr>
												                                <th>Deleted_status</th>
												                                <td>{{ service.deletedStatus }}</td>
												                            </tr> #}
					</tbody>
				</table>

				<a class="btn btn-default" href="{{ path('adminPath.services') }}">
					<i class="fa fa-arrow-circle-left"></i>
					Retour a la liste</a>

				<a href="{{ path('adminPath.services_edit', {'id': service.id}) }}" class="btn btn-primary btn-xs">
					<i class="fa fa-pencil"></i>
					Modifier</a>

				<div class="mt-4">
					{{ include('admin/services/_delete_form.html.twig') }}
				</div>

			</div>
		</section>
	</div>
{% endblock %}
